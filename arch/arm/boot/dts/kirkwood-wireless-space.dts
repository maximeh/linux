/dts-v1/;

#include "kirkwood.dtsi"
#include "kirkwood-6281.dtsi"
#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "LaCie Wireless Space";
	compatible = "lacie,wireless-space", "marvell,kirkwood-88f6281", "marvell,kirkwood";

	memory {
		device_type = "memory";
		reg = <0x00000000 0x10000000>; /* 256MB */
	};

	chosen {
		bootargs = "console=ttyS0,115200n8";
		stdout-path = &uart0;
	};

	mbus {
		pcie-controller {
			status = "okay";
			pcie@1,0 {
				status = "okay";
			};
		};
	};

	ocp@f1000000 {
		i2c@11000 {
			/*
			 * i2c addr | chip	 | description
			 * 0x49     | LM77CIM-3    | temperature sensor
			 * 0x50     | HT24LC04     | eeprom (512B)
			 */
			status = "okay";

			lm77@49 {
				compatible = "national,lm77";
				reg = <0x49>;
			};

			eeprom@50 {
				compatible = "atmel,24c04";
				pagesize = <16>;
				reg = <0x50>;
			};
		};

		serial@12000 {
			status = "okay";
		};

		sata@80000 {
			status = "okay";
			nr-ports = <1>;
		};

		gpio-fan {
			status = "okay";
			compatible = "gpio-fan";
			pinctrl-0 = <&pmx_fanctrl_37 &pmx_fanctrl_7 &pmx_fanctrl_36
				     &pmx_fanalarm_39>;
			pinctrl-names = "default";
			alarm-gpios = <&gpio1 8 GPIO_ACTIVE_HIGH>;
			gpios = <&gpio1 6 GPIO_ACTIVE_HIGH
				 &gpio0 6 GPIO_ACTIVE_HIGH
				 &gpio1 5 GPIO_ACTIVE_HIGH>;
			gpio-fan,speed-map = <    0 0
					       1220 1
					       1325 2
					       1700 4
					       2000 3
					       3200 5
					       3800 6
					       4900 7
					       5400 8 >;
		};

		pinctrl: pin-controller@10000 {
			pmx_usb_power_enable: pmx-usb-power-enable {
				marvell,pins = "mpp14";
				marvell,function = "gpio";
			};
			pmx_fanctrl_7: pmx-fanctrl-7 {
				marvell,pins = "mpp7";
				marvell,function = "gpio";
			};
			pmx_fanctrl_36: pmx-fanctrl-36 {
				marvell,pins = "mpp36";
				marvell,function = "gpio";
			};
			pmx_fanctrl_37: pmx-fanctrl-37 {
				marvell,pins = "mpp37";
				marvell,function = "gpio";
			};
			pmx_fanalarm_39: pmx-fanalarm-39 {
				marvell,pins = "mpp39";
				marvell,function = "gpio";
			};
		};
	};

	dsa@0 {
		compatible = "marvell,dsa";
		#address-cells = <2>;
		#size-cells = <0>;

		dsa,ethernet = <&eth0port>;
		dsa,mii-bus = <&mdio>;

		switch@0 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0 0>; /* MDIO address 0, switch 0 in tree */

			port@0 {
				reg = <0>;
				label = "lan1";
			};

			port@1 {
				reg = <1>;
				label = "lan2";
			};

			port@2 {
				reg = <2>;
				label = "lan3";
			};

			port@3 {
				reg = <3>;
				label = "lan4";
			};

			port@4 {
				reg = <4>;
				label = "cpu";
			};
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		button@0 {
			label = "Rear power push button";
			linux,code = <KEY_POWER>;
			gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
			debounce-interval = <5>;
		};
		button@1{
			label = "Front WPS button";
			linux,code = <KEY_WLAN>;
			gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
			debounce-interval = <5>;
		};

	};

	gpio-poweroff {
		compatible = "gpio-poweroff";
		gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;
	};

	gpio-leds {
		compatible = "gpio-leds";

		red-front {
			label = "ws:red:power";
			gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
		};
		green-front {
			label = "ws:green:power";
			gpios = <&gpio0 14 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "ide-disk";
		};
		blue-front {
			label = "ws:blue:power";
			gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "ide-disk";
		};

	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-0 = <&pmx_usb_power_enable>;
		pinctrl-names = "default";

		usb_host_vbus: regulator@1 {
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "USB Host Vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio1 9 GPIO_ACTIVE_HIGH>;
		};

		regulator@2 {
			compatible = "regulator-fixed";
			reg = <2>;
			regulator-name = "hdd0power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 16 GPIO_ACTIVE_HIGH>;
		};
	};
};

&nand {
	/* Total size : 128MB */
	status = "okay";

	partition@0 {
		label = "u-boot";
		reg = <0x0000000 0x100000>; /* 1MB */
	};

	partition@100000 {
		label = "uImage";
		reg = <0x0100000 0x400000>; /* 4MB */
	};

	partition@500000 {
		label = "initrd";
		reg = <0x0500000 0x1000000>; /* 16MB */
	};

	partition@1500000 {
		label = "root";
		reg = <0x01500000 0x6b00000>; /* 107MB */
	};
};

&mdio {
	status = "okay";

	/* ethphy0: ethernet-phy@0 { */
		/* device_type = "ethernet-phy"; */
		/* reg = <0>; */
	/* }; */
};

